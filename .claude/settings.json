{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "if [[ \"$CLAUDE_TOOL_ARG_FILE_PATH\" == *.swift ]]; then swift format -i \"$CLAUDE_TOOL_ARG_FILE_PATH\"; fi",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "nogo",
            "type": "command"
          }
        ],
        "matcher": ".*"
      }
    ]
  }
}
