{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "swift format lint -s -r .",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "nogo",
            "type": "command"
          }
        ],
        "matcher": ".*"
      }
    ]
  }
}
